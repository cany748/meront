.base
  padding 20px 0

  &__wrapper
    display flex
    justify-content space-between
    position relative

  &__decor
    size 750px
    position absolute
    pointer-events none
    user-select none
    top -40px
    right -165px
    & img
      size 100%
    &:after
      content ''
      size 100vw 100%
      display block
      position absolute
      background $color-white
      top 0
      left 725px

  &__main
    width 600px
    position relative

  &__side
    flex 1
    height 730px
    display flex
    justify-content flex-end
    align-items center
    position relative
    margin-top -20px
    & .base__contacts
      display none
      margin-top 10px
    &-img
      display flex
      justify-content center
      align-items center
      pointer-events none
      user-select none
      padding-left 20px
      margin-right -150px

.base__title
  color $color-dark
  font-size 54px
  line-height 62px
  font-weight 700
  margin-top 50px

.base__model
  max-width 400px
  margin-top 65px

.base__vendor
  margin-top 55px
  &-title
    color #676767
    font-size 18px

  &-items
    max-width 400px
    display flex
    flex-wrap wrap
    justify-content space-between
    margin-top 15px

  &-item
    size 120px 50px
    color $color-orange
    line-height 46px
    font-weight 700
    text-align center
    text-decoration none
    box-sizing border-box
    border 2px solid $color-orange
    border-radius 15px
    margin 10px 0
    &:hover, &_active
      color $color-white
      background $color-orange
    &_green
      display none
      color $color-white
      font-size 12px !important
      background $color-green
      border-color $color-green
      &:hover
        background $color-green

.base__advantages
  width 300px
  position relative
  margin-top 50px
  &-item
    position relative
    color #676767
    font-weight 400
    padding-left 35px
    margin 14px 0
    &:before
      content ''
      display block
      position absolute
      top 0
      left 0

    &_waiting:before
      svg(waiting, 21px)

    &_clock:before
      svg(time, 20px, $color-orange)
      top 1px
      left 1px

    &_shield:before
      svg(shield, 16px, $color-orange)
      top 1px
      left 3px

    &_cpu:before
      svg(cpu, 20px)
      top 3px
      left 1px
  &_side
    position absolute
    bottom 50px
    right 175px

.base__contacts
  size 435px 116px
  background $color-white
  border-radius 8px
  box-shadow 0 4px 10px rgba(0, 0, 0, 0.02)
  margin-top 60px
  &_side
    box-shadow 3px 3px 10px 3px #15151710
  &-title
    color $color-dark
    font-size 18px
    line-height 22px
    font-weight 700
    text-align center
    padding 20px 0

  &-items
    display flex
    align-items center
    padding 0 23px

  &-item
    display block
    &_whatsapp
      svg(whatsapp, 32px)
    &_telegram
      svg(telegram, 29px)
      margin-left 14px
    &_vk
      svg(vk, 34px, #2B68D7)
      margin-left 21px

  &-item_phone
    position relative
    color $color-dark
    font-size 20px
    font-weight 500
    line-height 24px
    text-decoration none
    padding-left 40px
    margin-left auto
    &:before
      content ''
      display block
      position absolute
      svg(tel, 24px, #000)
      top -2px
      left 0

.base-product-card
  size 435px 120px
  display none
  align-items center
  box-sizing border-box
  background #D6F3E1
  border-radius 15px
  box-shadow 3px 3px 10px 3px #15151710
  padding 0 25px
  &__img
    width 50%
    align-self flex-end
    font-size 0
    text-align center

  &__name
    width 50%
    max-height 100%
    color $color-dark
    line-height 1.2
    font-weight 600
    text-align center

.base-review-card
  display none
  width 435px
  box-sizing border-box
  background $color-white
  border-radius 8px
  box-shadow 3px 3px 10px 3px #15151710
  padding 18px
  margin-top 10px
  &__title
    color $color-dark
    font-size 18px
    font-weight 600
    text-align center
  &__footer
    display flex
    justify-content space-between
    align-items center
    padding-bottom 10px
    margin-top 20px
    &-text
      color #676767
      font-weight 300
    &-button
      size 228px 50px
      display flex
      justify-content center
      align-items center
      box-sizing border-box
      color $color-black
      font-weight 600
      text-decoration none
      border 2px solid $color-orange
      border-radius 15px
      &:hover
        color $color-white
        background $color-orange

.base-review-card-item
  display flex
  align-items center
  padding-top 16px
  &__name, &__time
    color #676767
    font-size 16px
    font-weight 300
  &__name
    width 210px
    padding-right 16px
  &__time
    width 76px
    padding-right 16px
  &__price
    position relative
    margin-left auto
  &__current-price
    color $color-black
    font-size 16px
    font-weight 600
  &__old-price
    position absolute
    color $color-orange
    font-size 12px
    font-weight 300
    text-decoration line-through
    text-align right
    opacity 0.5
    top -13px
    right 0

.base__about
  margin-top 20px
  &-title
    color $color-dark
    font-size 32px
    font-weight 600
  &-items
    width 435px
    display flex
    justify-content space-between
    align-items flex-end
    margin-top 60px
  &-item
    color $color-dark
    font-size 18px
    line-height 1
    font-weight 500
    span
      color $color-green
      font-size 42px
      font-weight 700

.base__warranty
  position relative
  color $color-dark
  font-size 18px
  padding-left 60px
  margin-top 70px
  &:before
    content ''
    display block
    position absolute
    svg(shield, 37px, $color-orange)
    top 0
    left 0

