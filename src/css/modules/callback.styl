.callback
  & .layer__inside.is-completed
    .callback__form, .callback__vip
      display none !important

  &__title
    color $color-dark
    font-size 36px
    font-weight 600
    text-align center

  &__vip
    position relative
    color $color-dark
    font-size 22px
    font-weight 600
    text-align center
    &:before
      content ''
      display inline-block
      position relative
      svg(star, 16px)
      top -1px
      left -10px

  &__form
    margin-top 35px

  &__field-title
    color $color-dark
    margin-top 25px
    margin-bottom 15px
    margin-left 35px

  &__fields
    width 320px
    display flex
    justify-content space-between
    margin 0 auto 15px

  &__field
    width 320px
    margin 0 auto 15px
    .field__input
      color $color-dark
      font-size 16px
      //padding-left 45px
      +placeholder() {
        color #676767
      }

    &_icon
      .field__input
        padding-left 45px
      &:before
        content ''
        display block
        position absolute
      &-user:before
        svg(user, 18px)
        top 23px
        left 16px
      &-phone:before
        svg(phone, 12px)
        top 22px
        left 20px

    &_selectize
      .selectize-input
        font-size 16px
        input
          +placeholder() {
            color #676767
          }
      .selectize-dropdown
        overflow hidden

    &_small
      width 150px
      margin 0

  &__textarea
    size 320px 180px
    display block
    color $color-dark
    outline 0
    appearance none
    border 2px solid #e8e8e8
    border-radius 20px
    box-shadow 0 0 50px rgba(103, 103, 103, 0.05)
    transition $transition-main
    padding 20px
    margin 0 auto
    +placeholder() {
      color #676767
    }
    &:focus {
      border-color $color-orange
    }

  &__price
    width 320px
    display flex
    color $color-dark
    margin 35px auto 0
    span
      font-weight 500
      margin-left auto

  &__button
    display flex
    size 320px 60px
    margin 35px auto 0

+do(580)
  .callback
    &__title
      font-size 20px
    &__field-title
      margin-left 0
    &__field, &__fields, &__textarea, &__price
      width 255px
    &__field_small
      width 125px
    &__button
      size 100% 46px