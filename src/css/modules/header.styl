.header
  position relative

.header-main
  &__wrapper
    height 140px
    display flex
    align-items center
    justify-content space-between

  &__logo
    size 285px 55px
    margin-top -28px
    margin-left -50px

  &-location
    display flex
    flex-direction column
    position relative
    color #676767
    padding-bottom 6px
    padding-left 25px
    &:before
      content ''
      display block
      position absolute
      svg(place, 15px, #b3b3b3)
      top 0
      left 0
    &__name
      font-weight 300
      line-height 19px
    &__button
      color inherit
      font-size 12px
      font-weight 400
      line-height 22px
      letter-spacing 0.4px
      margin-left 2px

  &-tel
    display flex
    flex-direction column
    position relative
    padding-left 25px
    margin-bottom 5px
    &:before
      content ''
      display block
      position absolute
      svg(tel, 15px, #000)
      top 0
      left 0
    &__number
      color black
      font-size 16px
      font-weight 500
      line-height 19px
      text-decoration none
    &__button
      color #676767
      font-size 12px
      font-weight 400
      line-height 22px
      letter-spacing 0.5px
      margin-left 3px

  &__button
    size 180px 50px

.header-nav
  background linear-gradient(0deg, #FF6A00, #FF6A00), linear-gradient(180deg, #FC954C -138.89%, #FF6A00 275%)
  &__wrapper
    height 60px
    display flex
    align-items center

  &__item
    color $color-white
    text-decoration none
    letter-spacing 0.4px
    margin-right 30px
    &:hover
      color $color-white
      text-decoration underline

  &__button
    display none
    size 180px 46px
    margin-left auto

.header-mobile
  size 100% 95px
  display none
  position fixed
  background $color-background
  z-index 50
  trbl 0
  &__wrapper
    display flex
    flex-wrap wrap
    padding-bottom 15px

  &__logo
    order 1
    size 94px 34px
    margin-top 16px

  &__button
    order 6
    svg(menu, 18px, $color-orange)
    border none
    outline none
    margin-top 30px
    margin-right 3px
    margin-left auto

  &__locations
    display flex
    flex-direction column
    position relative
    order 4
    color #676767
    font-size 12px
    font-weight 300
    line-height 16px
    padding-left 30px
    margin-top 23px
    margin-left 50px
    &:before
      content ''
      display block
      position absolute
      svg(place, 15px, #b3b3b3)
      left 5px

  &__tel
    position relative
    order 5
    color $color-dark
    font-size 12px
    font-weight 500
    line-height 15px
    text-decoration none
    padding-left 22px
    margin-top 24px
    margin-left 50px
    &:before
      content ''
      display block
      position absolute
      svg(tel, 12px, #000)
      top 1px
      left 0

  & .flex-next
    order 3
    display none

  &__title
    size 100% 30px
    color $color-white
    font-size 12px
    font-weight 400
    line-height 30px
    letter-spacing 0.5px
    background linear-gradient(0deg, #FF6A00, #FF6A00), linear-gradient(180deg, #FC954C -138.89%, #FF6A00 275%)
    padding-left 20px

+do(1300)
  .header-main__logo
    margin-left 0

+do(1024)
  .header-main__button
    display none

  .header-nav__button
    display block

  .header-nav__item
    margin-right 20px

+do(850)
  .header
    margin-bottom 95px
  .header-main, .header-nav
    display none
  .header-mobile
    display block

+do(550)
  .header
    margin-bottom 134px
  .header-mobile
    height 134px
  .header-mobile__button
    order 2
  .header-mobile .flex-next
    display block
  .header-mobile__locations
    margin-left 0
  .header-mobile__tel
    margin-left auto