.how-working
  background $color-white
  padding 80px 0 155px
  &__wrapper
    display flex
    justify-content space-between
    position relative

  &__scrollTop
    size 50px
    position absolute
    svg-color(scrollTop, $color-dark)
    background-repeat no-repeat
    background-position center
    border-radius 50%
    border 1px solid $color-dark
    top 10px
    right -50px
    &:hover
      background-color $color-dark
      svg-color(scrollTop, $color-white)

  &__side
    position relative

  &__img
    position relative
    left -44px

  &__title
    color $color-dark
    font-size 48px
    line-height 48px
    font-weight 600
    margin-top 60px

.how-working__roadmap
  size 604px 650px
  box-sizing border-box
  display flex
  position relative
  box-shadow 0 20px 50px rgba(103, 103, 103, 0.05)
  background-color #ffe2b9
  border-radius 25px
  padding 50px 50px 60px
  margin-top 150px
  &-points
    margin-right 40px
  &-items
    display flex
    flex-direction column
    justify-content space-between
  &:after
    content ''
    size 112px 121px
    display block
    position absolute
    background url("/assets/images/bell.png")
    background-size 100%
    right -55px
    bottom 35px

.how-working__roadmap-point
  size 26px
  position relative
  box-sizing border-box
  border-radius 50%
  border 7px solid #D5D5D5
  margin-bottom 190px
  &_active
    border-color $color-green
  &:after
    content ''
    size 1px 182px
    display block
    position absolute
    background #D5D5D5
    bottom -193px
    left 6px
  &:last-child
    margin-bottom 0
    &:after
      content none

.how-working__roadmap-item
  height 110px
  b
    display block
    font-size 24px
    line-height 26px
    font-weight 700
    margin-bottom 30px
  span
    color $color-dark
    font-size 18px
    line-height 24px
    font-weight 400
  &_active b
    color $color-green

