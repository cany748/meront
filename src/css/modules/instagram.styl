.instagram
  position relative
  padding-top 115px
  padding-bottom 170px
  &__decor
    width calc(100% + 500px)
    max-width 2800px
    position absolute
    pointer-events none
    user-select none
    top -30px
    right 0
  &__wrapper
    position relative
  &__header
    display flex
  &__link
    size 72px
    margin-right 40px
    margin-left auto
  &__title
    color $color-dark
    font-size 48px
    font-weight 600
    padding-right 67px
  &__items
    display flex
    flex-wrap wrap
    padding 0 30px
    margin-top 60px
  &__item
    size 200px
    border-radius 25px
    padding 5px
    img
      border-radius 25px

