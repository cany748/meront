.layer-menu
  size 334px 812px
  max-height 812px
  min-height auto
  flex-direction column
  border-radius 0 25px 25px 0
  padding 15px
  & .layer__content
    overflow initial

  &-header
    width 100%
    box-sizing border-box
    &__row
      display flex

    &__logo
      size 94px 34px
      margin-top 2px

    &__close
      display block
      svg(cross, 20px, #B3B3B3)
      margin-top 15px
      margin-right 20px
      margin-left auto

    &__tel
      display block
      position relative
      color $color-dark
      font-size 12px
      font-weight 500
      line-height 15px
      text-decoration none
      padding-left 23px
      margin-top 14px
      margin-left 17px
      &:before
        content ''
        display block
        position absolute
        svg(tel, 12px, #000)
        top 1px
        left 0

  &__navs
    display flex
    flex-direction column
    margin-top 65px
    margin-bottom 60px
    margin-left 15px
    a
      color $color-dark
      font-weight 600
      line-height 40px
      letter-spacing 0.5px
      text-decoration none
      &:hover
        color $color-orange
        text-decoration underline

  &__line
    size 300px 1px
    background #cccccc
    margin-left -15px

  &-place
    position relative
    padding-left 30px
    margin-top 20px
    margin-left 10px
    &:before
      content ''
      display block
      position absolute
      svg(place, 15px, $color-green)
      top 1px
      left 0

    &__address
      color $color-dark
      font-size 12px
      line-height 14px
      font-weight 500
      letter-spacing 0.4px

    &__info
      color #676767
      font-size 10px
      line-height 12px
      letter-spacing 0.25px
      margin-top 3px

  &__time
    position relative
    color $color-dark
    font-size 12px
    line-height 18px
    letter-spacing 0.4px
    padding-top 3px
    padding-left 30px
    margin-top 16px
    margin-left 10px
    &:before
      content ''
      display block
      position absolute
      svg(time, 15px, $color-green)
      top 0
      left 0

  &-socials
    display flex
    margin-top 95px
    margin-left 14px
    &__item
      size 50px
      box-sizing border-box
      display flex
      justify-content center
      align-items center
      border 1px solid rgba(21, 21, 23, 0.3)
      border-radius 50%
      margin-right 8px
      &:hover
        background rgba(21, 21, 23, 0.15)
        border none
      &:before
        content ''
        display block
      &_whatsapp:before
        svg(whatsapp, 28px)
      &_telegram:before
        svg(telegram, 24px)
      &_vk:before
        svg(vk, 29px, #2B68D7)
      &_phone:before
        svg(tel, 20px, $color-green)

  &__button
    size 184px 50px
    margin-top 19px
    margin-left 13px