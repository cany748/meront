.selectize-input > * {
  display: inline-block;
  vertical-align: baseline;
  zoom: 1
}

.simplebar-mask {
  border-radius 19px
}

.simplebar-track.simplebar-vertical {
  size 7px 90%
  background #c4c4c41a
  border-radius 50px
  top 5%
  right 3px
}

.simplebar-scrollbar {
  width 3px
  background #e8e8e8
  border-radius 50px
  left 2px
}

+do(600)
  .selectize-input input
    font-size 16px