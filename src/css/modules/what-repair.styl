.what-repair
  background $color-white
  padding-top 190px
  padding-bottom 90px
  &__wrapper
    position relative

  &__title
    color $color-dark
    font-size 48px
    font-weight 700
    line-height 50px

  &__links
    size 608px 266px
    display flex
    flex-wrap wrap
    flex-direction column
    margin-top 100px

  &__link
    width fit-content
    position relative
    color $color-dark
    font-size 22px
    text-decoration none
    padding 10px 10px 10px 47px
    &:before
      content ''
      size 32px
      display block
      position absolute
      border-radius 50%
      svg-color(check, $color-white)
      background-color #00b440
      background-repeat no-repeat
      background-position center
      top 12px
      left 0

    &:hover
      text-decoration underline

  &__background
    size 698px 668px
    position absolute
    background url("/assets/images/what-repair-pc.png")
    background-size 100%
    pointer-events none
    user-select none
    top -107px
    left 507px

  &__logos
    display flex
    justify-content space-between
    align-items center
    font-size 0
    padding 0 15px
    margin-top 230px

  &__logo
    display flex
    justify-content center
    align-items center
    margin-right 30px
    &:last-child
      margin-right 0

